doctype html
html
  head
    meta(charset='utf-8')
    meta(charset='ISO-8859-1')
    
    block stylesheets
    link(href='../css/main.css', rel='stylesheet')
    link(href='../node_modules/jqueryui/jquery-ui.css', rel='stylesheet')
    link(href='../node_modules/jquery-timepicker/jquery.timepicker.css', rel='stylesheet')
        
    block script
    script(src='../node_modules/jquery/dist/jquery.js', type='text/javascript')
    script(src='../node_modules/jqueryui/jquery-ui.js', type='text/javascript')
    script(src='../node_modules/jquery-timepicker/jquery.timepicker.js', type='text/javascript')
    script.
      $(function() {        
            $('#date').datepicker({minDate: 0});
            $('#time').timepicker({interval: 1, timeFormat: 'HH:mm', startTime: new Date(Date.now())})
         });
    title #{title}    
  body
    block content
